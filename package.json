{
    "name": "softcraft",
    "version": "0.0.0",
    "scripts": {
        "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" \"npm run storybook\"",
        "client:dev": "vite",
        "server:dev": "ts-node-dev --project tsconfig.server.json src/server",
        "server:build": "tsc --project tsconfig.server.json",
        "client:build": "vite build",
        "storybook:build": "build-storybook -o dist/storybook",
        "build": "npm run server:build && npm run client:build && npm run storybook:build",
        "serve": "vite preview",
        "prepare": "husky install",
        "test": "tsc && prettier --check . && eslint . && stylelint \"**/*.css\"",
        "storybook": "start-storybook -p 6006",
        "start": "node dist/server.js",
        "prettify": "prettier . --write"
    },
    "devDependencies": {
        "@babel/core": "^7.15.8",
        "@storybook/addon-actions": "^6.3.12",
        "@storybook/addon-essentials": "^6.3.12",
        "@storybook/addon-links": "^6.3.12",
        "@storybook/react": "^6.3.12",
        "@types/animejs": "^3.1.4",
        "@types/express": "^4.17.13",
        "@types/howler": "^2.2.4",
        "@types/node": "^16.11.4",
        "@types/react": "^17.0.32",
        "@types/react-dom": "^17.0.10",
        "@types/react-router-dom": "^5.3.1",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vitejs/plugin-react-refresh": "^1.3.6",
        "babel-loader": "^8.2.3",
        "concurrently": "^6.3.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "http-proxy-middleware": "^2.0.1",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.4",
        "prettier": "^2.4.1",
        "storybook-builder-vite": "^0.1.2",
        "stylelint": "^14.0.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^23.0.0",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.4.4",
        "vite": "^2.6.10"
    },
    "dependencies": {
        "@arwes/animation": "^1.0.0-alpha.19",
        "@arwes/core": "^1.0.0-alpha.19",
        "@arwes/design": "^1.0.0-alpha.19",
        "@arwes/sounds": "^1.0.0-alpha.19",
        "@emotion/css": "^11.5.0",
        "@emotion/react": "^11.5.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.3.0"
    }
}
